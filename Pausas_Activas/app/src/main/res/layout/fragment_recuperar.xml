<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.admin.pausas_activas.Fragmentos.Recuperar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="wrap_content"
                android:textColorHint="#4d4d4d"
                android:background="@drawable/caja_redonda"
                android:singleLine="true"
                android:width="220dp"
                android:text=""
                android:paddingLeft="40dp"
                android:paddingRight="10dp"
                android:paddingBottom="22dp"
                android:paddingTop="20dp"
                android:layout_marginTop="15dp"
                android:textColor="#4d4d4d"
                android:textStyle="bold|normal"
                android:layout_height="wrap_content"
                android:hint="@string/correoRecuperar"
                android:id="@+id/correoRecuperar"
                android:layout_marginLeft="80dp"
                android:layout_alignTop="@+id/imgArroba2"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arroba"
                android:padding="33dp"
                android:background="@drawable/iconos_redondo"
                android:id="@+id/imgArroba2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="34dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="44dp" />
            <EditText
                android:layout_width="wrap_content"
                android:textColorHint="#4d4d4d"
                android:background="@drawable/caja_redonda"
                android:singleLine="true"
                android:width="220dp"
                android:text=""
                android:paddingLeft="40dp"
                android:paddingRight="10dp"
                android:paddingBottom="22dp"
                android:paddingTop="20dp"
                android:layout_marginTop="40dp"
                android:textColor="#4d4d4d"
                android:textStyle="bold|normal"
                android:layout_height="wrap_content"
                android:hint="@string/numerodocumentorecuperar"
                android:id="@+id/documentoRecuperar"
                android:layout_below="@+id/imgArroba2"
                android:layout_alignLeft="@+id/correoRecuperar"
                android:layout_alignStart="@+id/correoRecuperar" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cedula"
                android:padding="33dp"
                android:background="@drawable/iconos_redondo"
                android:id="@+id/imgTelefono"
                android:layout_marginTop="40dp"
                android:layout_alignLeft="@+id/imgArroba2"
                android:layout_below="@+id/correoRecuperar"
                />
            <com.dd.CircularProgressButton
                android:id="@+id/recuperarUsuario"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:drawableBottom="@drawable/bien"
                app:cpb_cornerRadius="70dp"
                app:cpb_iconError="@drawable/reintentar"
                app:cpb_iconComplete="@drawable/bien"
                android:paddingBottom="10dp"
                app:cpb_selectorIdle="@drawable/boton_efecto"
                android:layout_marginTop="73dp"
                android:layout_below="@+id/imgTelefono"
                android:layout_alignRight="@+id/documentoRecuperar"
                android:layout_alignEnd="@+id/documentoRecuperar" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>


