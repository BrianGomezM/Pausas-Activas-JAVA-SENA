<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.admin.pausas_activas.Fragmentos.Registrar_Avatar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar-Personaje"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />


    <com.dd.CircularProgressButton
        android:id="@+id/registrarAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textColor="@color/cpb_white"
        android:drawableBottom="@drawable/bien"
        app:cpb_cornerRadius="70dp"
        app:cpb_iconError="@drawable/reintentar"
        app:cpb_iconComplete="@drawable/bien"
        android:paddingBottom="5dp"
        app:cpb_selectorIdle="@drawable/boton_efecto"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:spinnerMode="dropdown"
        android:id="@+id/genero"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:background="@drawable/style_spiner"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/imgArroba"
        android:layout_alignRight="@+id/avatar"
        android:layout_alignEnd="@+id/avatar"
        android:layout_alignLeft="@+id/imgArroba"
        android:layout_alignStart="@+id/imgArroba" />


    <EditText
        android:layout_width="wrap_content"
        android:textColorHint="#4d4d4d"
        android:background="@drawable/caja_redonda"
        android:singleLine="true"
        android:width="220dp"
        android:text=""
        android:paddingLeft="40dp"
        android:paddingRight="10dp"
        android:paddingBottom="22dp"
        android:paddingTop="20dp"
        android:textColor="#4d4d4d"
        android:textStyle="bold|normal"
        android:layout_height="wrap_content"
        android:hint="@string/nombreAvatar"
        android:id="@+id/avatar"
        android:layout_above="@+id/genero"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/personaje"
        android:layout_marginTop="36dp"
        android:padding="30dp"
        android:background="@drawable/iconos_redondo"
        android:id="@+id/imgArroba"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:id="@+id/discapacidad"
        android:layout_marginTop="18dp"
        android:text="Tiene alguna discapacidades permanentes?"
        android:layout_below="@+id/genero"
        android:layout_alignRight="@+id/genero"
        android:layout_alignEnd="@+id/genero"
        android:layout_alignLeft="@+id/genero"
        android:layout_alignStart="@+id/genero" />


</RelativeLayout>

